= form_for @search do |f|
  %p
    = f.label :keywords
    %br/
    = f.text_field :keywords
  %p
    = f.label :category_id
    %br/
    = f.select(:category_id, options_for_select([[:address, :address], [:zipcode, :zipcode]])) 
  %p
    Price Range
    %br/
    = f.text_field :minimum_price, :size => 7
    \-
    \#{f.text_field :maximum_price, :size => 7}
  %p= f.submit "Submit"

  searches[keywords: "", category_id: "", ...]dvvsdf