.col-xs-6.col-xs-offset-3
  = form_for @listing, :html => { :multipart => true } do |f|
    =f.label :address
    %br
    =f.text_field :address
    %br
    =f.label :city
    %br
    =f.text_field :city
    %br
    =f.label :state
    %br
    =f.text_field :state
    %br
    =f.label :zipcode
    %br
    =f.number_field :zipcode
    %br
    =f.label :rent
    %br
    $
    =f.number_field :rent
    %br
    =f.label :lease_start
    %br
    =f.date_field :lease_start
    %br
    =f.label "Lease Length in Months"
    %br
    =f.number_field :lease_length
    %br
    =f.label :lease_type
    %br
    Sub
    =f.radio_button :lease_type, "sub"
    %br
    Normal
    =f.radio_button :lease_type, "normal"
    %br
    =f.label "Bedrooms"
    %br
    =f.text_field :rooms
    %br
    =f.label :description
    %br
    =f.text_area :description
    %br
    =f.label :email
    %br
    =f.email_field :email
    %br
    =f.label :phone
    %br
    =f.text_field :phone, {:maxlength => 10, :placeholder => 5555555555}
    %br
    = f.file_field :photo
    %br
    =f.submit "Submit"

  

