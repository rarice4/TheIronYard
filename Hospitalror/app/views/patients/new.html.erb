<h1>Create Patients</h1>

<%=form_for @patient do |f| %>
  
<% if f.object.errors.messages.length > 0 %>
    <!-- Render the errors to the user -->
    <%= f.object.errors.messages.inspect %> 
    <br>
    <% f.object.errors.messages.each do |key, value| %>
      <% value.each do |message| %>
        <%= key.capitalize %> <%= message %>
        <br>
      <% end %>
    <% end %>
  <% end %>




  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br>
   <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br>
   <%= f.label :dob %>
  <%= f.date_select(:dob, :start_year => 1900) %>
  <br>
   <%= f.label :gender %>
   <br>
   <%= f.radio_button(:gender, "Male") %>
   <%= label_tag("Male") %>
   <%= f.radio_button(:gender, "Female") %>
   <%= label_tag("Female") %>
  <br>
   <%= f.label :description %>
  <%= f.text_field :description%>
  <br>
  <%= f.submit %>

<% end %>
