%h1 Patient Database
= link_to "Create Patient", new_patient_path
%ul
  Patients
  - @patients.each do |patient|
    %li
      = patient.first_name
      | #{patient.last_name} | #{patient.workflow_state} [ #{link_to "Edit", edit_patient_path(patient)} | #{link_to "Delete", patient_path(patient), method: :delete} | #{link_to "Show", patient_path(patient)} ]